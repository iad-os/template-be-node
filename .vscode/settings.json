// Place your settings in this file to overwrite default and user settings.
{
    "window.title": "template-be-node${separator}${dirty}${activeEditorShort}${separator}${appName}",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
      "javascript",
      "typescript"
    ],
    "editor.formatOnSave": false,
    "[javascript]": {
      "editor.formatOnSave": true
    },
    "[typescript]": {
      "editor.formatOnSave": true
    },
    "[markdown]": {
      "editor.formatOnSave": true
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/dist": true,
      "**/coverage": true
    },
    "typescript.referencesCodeLens.enabled": true,
    "appService.zipIgnorePattern": [
      ".vscode{,/**}"
    ],
    "appService.deploySubpath": "",
    "files.eol": "\n",
    "workbench.colorCustomizations": {
      "activityBar.activeBackground": "#3bc49b",
      "activityBar.background": "#3bc49b",
      "activityBar.foreground": "#15202b",
      "activityBar.inactiveForeground": "#15202b99",
      "activityBarBadge.background": "#a754cb",
      "activityBarBadge.foreground": "#e7e7e7",
      "commandCenter.border": "#e7e7e799",
      "sash.hoverBorder": "#3bc49b",
      "statusBar.background": "#2f9d7c",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#3bc49b",
      "statusBarItem.remoteBackground": "#2f9d7c",
      "statusBarItem.remoteForeground": "#e7e7e7",
      "titleBar.activeBackground": "#2f9d7c",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveBackground": "#2f9d7c99",
      "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.remoteColor": "#2f9d7c",
  }