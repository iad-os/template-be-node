// Place your settings in this file to overwrite default and user settings.
{
    "window.title": "template-be-node${separator}${dirty}${activeEditorShort}${separator}${appName}",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
      "javascript",
      "typescript"
    ],
    "editor.formatOnSave": false,
    "[javascript]": {
      "editor.formatOnSave": true
    },
    "[typescript]": {
      "editor.formatOnSave": true
    },
    "[markdown]": {
      "editor.formatOnSave": true
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/dist": true,
      "**/coverage": true
    },
    "typescript.referencesCodeLens.enabled": true,
    "appService.zipIgnorePattern": [
      ".vscode{,/**}"
    ],
    "appService.deploySubpath": "",
    "files.eol": "\n",
    "workbench.colorCustomizations": {
      "activityBar.activeBackground": "#d2e776",
      "activityBar.background": "#d2e776",
      "activityBar.foreground": "#15202b",
      "activityBar.inactiveForeground": "#15202b99",
      "activityBarBadge.background": "#21a1be",
      "activityBarBadge.foreground": "#e7e7e7",
      "commandCenter.border": "#15202b99",
      "sash.hoverBorder": "#d2e776",
      "statusBar.background": "#c4e04a",
      "statusBar.foreground": "#15202b",
      "statusBarItem.hoverBackground": "#b2d324",
      "statusBarItem.remoteBackground": "#c4e04a",
      "statusBarItem.remoteForeground": "#15202b",
      "titleBar.activeBackground": "#c4e04a",
      "titleBar.activeForeground": "#15202b",
      "titleBar.inactiveBackground": "#c4e04a99",
      "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.remoteColor": "#c4e04a",
  }